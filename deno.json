{
  "name": "@claudiu-ceia/ts-duckling",
  "version": "0.0.11",
  "exports": {
    ".": "./mod.ts"
  },
  "publish": {
    "exclude": [
      ".github/",
      "bench/",
      "coverage/",
      "docs/",
      "scripts/",
      "tests/"
    ]
  },
  "imports": {
    "@claudiu-ceia/combine": "jsr:@claudiu-ceia/combine@0.2.8",
    "@std/assert": "jsr:@std/assert@1.0.18",
    "@std/testing/time": "jsr:@std/testing@1.0.17/time",

    "@data/countries-en-us": "./data/countries-en-us.json",
    "@data/languages-en": "./data/languages-en.json",
    "@data/tlds": "./data/tlds.json"
  },
  "tasks": {
    "fmt": "deno fmt",
    "lint": "deno lint",
    "check": "deno check mod.ts",
    "update:data": "deno run -A scripts/update_data.ts",
    "test": "deno test",
    "docs:bundle": "deno bundle --platform=browser mod.ts -o docs/vendor/ts-duckling.js",
    "docs:serve": "deno task docs:bundle && deno run -A jsr:@std/http/file-server docs --host 127.0.0.1 --port 8000"
  }
}
